<%= simple_form_for @item, :html => { :class => 'form-horizontal' } do |f| %>
  <%#= f.error_notification %>
  <%= render 'layouts/shared/error_exception', :object => @item %>
  <%= field_set_tag @item_title do %>
  <div class='form-inputs'>
  <%= f.input :title %>
  <%= f.input :description, input_html: { rows: 3 } %>
  <%#= f.input :description, :as => :ckeditor, :input_html => { :ckeditor => { :height => 400 } } %>
  <%= f.input :avatar %>
  </div>
  <% end %>
  <div class="form-actions">
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= submit_tag '取消', :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>
