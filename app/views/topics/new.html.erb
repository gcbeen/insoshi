<% content_for :title do %>
	提出话题
<% end %>
<div class='box'>
<%= simple_form_for @topic, :url => user_topics_path(current_user), :html => { :class => 'form-horizontal' } do |f| %>
	<%= render 'layouts/shared/error_exception', :object => @topic %>
	<%= field_set_tag '提出话题' do %>
	<div class="form-inputs">
		<%= f.input :title, input_html: {class: 'span6'}, required: true %>
		<%= f.input :content, input_html: {class: 'span6'}, as: :text, required: true %>
	</div>
	<% end %>
	<div class="form-actions">
		<%= f.button :submit, :value => '提出话题', :class => 'btn-primary' %>
	</div>
<% end %>
</div>
<% content_for :foot do %>
	<script>
		$('#topic_content').wysihtml5({locale: 'zh-CN'});
	</script>
<% end %>
